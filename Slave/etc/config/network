
config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'lan0'
	list ports 'lan1'
	list ports 'lan2'
	list ports 'lan3'
	list ports 'lan4'

config interface 'bond0'
	option device 'bond0.1 bond0.2'
	option device 'br-lan'
	option proto 'dhcp'

config interface 'wan'
	option device 'eth2'
	option proto 'dhcp'